<li id="micropost-<%= micropost.id %>" class="each">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
   <% if micropost.original_id.present? %>
    <span>
      (poseted by <%= link_to micropost.original_user_name, micropost.original_micropost.user %>)
    </span>
  <% end %>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <span class="custom"><%= render 'users/favorite_form', micropost: micropost %></span>
  <span class="custom"><%= render 'users/retweet_form', micropost: micropost %></span>
</li>