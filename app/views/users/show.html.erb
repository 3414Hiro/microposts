<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1 id="myname">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <ul class="followbtn">
         <li class="btn btn-primary"><%= link_to "Followings", followings_user_path(@user)  %></li>
         <li class="btn btn-primary"><%= link_to "Followers", followers_user_path(@user) %></li>
       </ul>
    </section>
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>